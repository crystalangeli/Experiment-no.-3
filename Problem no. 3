#include <iostream>
#include <string>

using namespace std;

int main()
{
	string input;
	cout << "Input string to reverse: ";
	getline(cin, input);
	cin.clear();
	cout << "\nReversed:\n";
	for (int i = input.size() - 1; i >= 0; --i)
	{
		cout << input[i];
	}
	cout << "\nsize: " << input.size();
	cin.get();
	return 0;
}
